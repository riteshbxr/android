<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/listitemlayout"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:layout_marginLeft="0dp"
    android:layout_marginRight="0dp"
    android:layout_marginTop="0dp"
    android:layout_marginBottom="0dp"
    tools:context=".Triplist"
    android:background="@drawable/listbgblue"
    android:alpha="1"
    >
<TextView
        android:id="@+id/sn"
        android:visibility="invisible"        
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <TextView
        android:id="@+id/MainItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/chk"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:text="ITEM"
        android:gravity="left|top"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:background="@android:color/transparent" 
        android:textColor="@color/black"
        android:focusable="false"/>

    <TextView
        android:id="@+id/SubItem2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/MainItem"
        android:layout_below="@+id/MainItem"
        android:background="@android:color/transparent"
        android:gravity="left|center_vertical"
        android:text="SUB ITEM 2"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/black"
        android:textStyle="italic"
        android:focusable="false"
        android:alpha ="0.85"
        />

    <TextView
        android:id="@+id/SubItem1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/SubItem2"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/MainItem"
        android:layout_marginRight="8dp"
        android:background="@android:color/transparent"
        android:gravity="left|center_vertical"
        android:text="SUB ITEM 1"
        android:textColor="@color/black"
        android:layout_marginLeft="8dp"
        android:textAppearance="?android:attr/textAppearanceSmall" 
        android:focusable="false"
        android:alpha ="0.85"/>

    <CheckBox
        android:id="@+id/chk"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:gravity="center" 
        android:focusable="false"        
        />
    


</RelativeLayout>

<!-- check box always visible, on click any check box, open contextual menu -->  
