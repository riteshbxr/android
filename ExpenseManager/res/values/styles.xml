<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- for swipe functionality-->
    

<style name="fade_animation"> 
	<item name="@android:windowEnterAnimation">@anim/popup_show</item> 
	<item name="@android:windowExitAnimation">@anim/popup_hide</item> 
</style>
    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="@android:style/Theme.Holo.Light.DarkActionBar">
        
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">	
      	<item name="android:checkboxStyle">@style/CheckBox</item>
       	<item name="android:radioButtonStyle">@style/myradio</item>
       	<item name="android:button">@style/mybutton</item>
       	<!-- 
       	<item name="android:fontFamily">roboto</item>
        All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
     <style name="mybutton" parent="@android:style/Widget.Holo.Light.Button">
        <item name="android:background">@drawable/btncalc</item>
        <item name="android:textColor">@color/white</item>        
        <item name="android:textStyle">bold</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Holo.Large</item>
    </style>
    
     <style name="CheckBox" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/chk</item>        
    </style>

    
    <style name="myradio" parent="@android:style/Widget.CompoundButton.RadioButton">
        <item name="android:button">@android:color/transparent</item>            
    </style>
    
    
