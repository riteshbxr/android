<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cost Code"

        />

    <EditText
        android:id="@+id/txtMasterCostCode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter 10 Digit CostCode"
        android:inputType="textPassword|textCapCharacters"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wholesale Margin" />

    <EditText
        android:id="@+id/txtWSMargin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter % margin on wholesale"
        android:inputType="numberDecimal"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Retail Margin" />

    <EditText
        android:id="@+id/txtRetailMargin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter % margin on Retail"
        android:inputType="numberDecimal"
        />
</LinearLayout>